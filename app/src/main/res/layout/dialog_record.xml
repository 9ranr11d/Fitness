<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/grid_lay_record_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:orientation="horizontal" >

        <!-- 날짜 -->

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="날짜 :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_record_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="15sp" />

        <!-- 부위 -->

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="부위 :"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_record_part"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <!-- 이름 -->

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="이름 :"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_record_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textSize="15sp" />

        <!-- 세트 -->

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="세트"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_record_set"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="set"
            android:textSize="15sp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_lay_record_target"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="횟수 &amp; 무게"
            android:textSize="15sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <GridLayout
                android:id="@+id/grid_lay_record_rep_and_wt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="6" >



            </GridLayout>


        </ScrollView>

    </LinearLayout>

</RelativeLayout>